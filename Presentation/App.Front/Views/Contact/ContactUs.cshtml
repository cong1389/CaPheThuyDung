@using App.Aplication.Extensions
@using App.Domain.Entities.GlobalSetting
@model App.Front.Models.ContactForm

@{
    <div class="columns-container" id="contact">
        <div class="container gw-contact-shop" id="columns">
           
            <div class="row clearfix">
                <div class="col-md-12 col-xs-12" id="layout-page">
                    <h2 class="page-heading">
                        <span class="page-heading-title">Liên hệ</span>
                    </h2>

                    <div class="content-text clearfix">

                        <p class="text-center">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15488.447712227713!2d108.0053097!3d13.9519406!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xc76a1b2a36857e29!2zRG50biBUaMawxqFuZyBN4bqhaSBUaMO5eSBEdW5n!5e0!3m2!1sfr!2s!4v1530379159277" width="100%" height="500" frameborder="0" style="border: 0" allowfullscreen=""></iframe>
                        </p>

                        <div class="col-md-7" id="col-left contactFormWrapper">
                            <h3 class="page-subheading">Viết nhận xét</h3>
                            <hr class="line-left">
                            <p>
                                Nếu bạn có thắc mắc gì, có thể gửi yêu cầu cho chúng tôi, và chúng tôi sẽ liên lạc lại với bạn sớm nhất có thể .
                            </p>
                            @using (Html.BeginForm("SendContact", "Contact", FormMethod.Post, new { enctype = "multipart/form-data", id = "form-send-Contact" }))
                            {
                                @Html.ValidationSummary()
                                <div class="form-group">
                                    @Html.LabelFor(mode => Model.FullName, new { @class = "sr-only" })
                                    @Html.TextBoxFor(model => model.FullName, new { @class = "form-control input-lg", required = true, autocapitalize = "words", placeholder = Html.DisplayPlaceHolderFor(m => m.FullName) })

                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(mode => Model.Email, new { @class = "sr-only" })
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-lg", required = true, autocapitalize = "words", placeholder = Html.DisplayPlaceHolderFor(m => m.Email) })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(mode => Model.Content, new { @class = "sr-only" })
                                    @Html.TextAreaFor(model => model.Content, new { rows = "6", @class = "form-control input-lg", required = true, autocapitalize = "words", placeholder = Html.DisplayPlaceHolderFor(m => m.Content) })
                                </div>

                                <button id="btn-send-contact" type="submit" class="btn">
                                    <i class="glyphicon glyphicon-envelope"></i>
                                    Gửi thông tin
                                </button>
                            }
                        </div>

                        <div class="col-md-5" id="col-right">
                            @{Html.RenderPartial("_ContactPartial", (IEnumerable<ContactInformation>)ViewBag.Contact);}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}



<!----/ContactUS--->