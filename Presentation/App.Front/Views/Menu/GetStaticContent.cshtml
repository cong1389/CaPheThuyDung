<!---GetStaticContent---->
@using Resources
@model App.Domain.Entities.Data.StaticContent

@if (Model != null)
{
    Html.RenderAction("BannerTop", "Banner", new { menuId = ViewBag.MenuId, title = ViewBag.Title });

    <div class="columns-container">
        <div class="container" id="columns">
            <div class="center_column col-xs-12 col-sm-12" id="center_column">

                <div class="row">
                    @Html.Partial("_BreadCrumb")
                    <h2 class="page-heading">
                        <span class="page-heading-title">@Model.Title</span>
                    </h2>
                    <div class="content-text clearfix">
                        @Html.Raw(Model.Description)
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="container">
        <p class="text-danger">@MessageUI.EmptyData</p>
    </div>
}
<!---/GetStaticContent---->